@{
    ViewData["Title"] = "Job List";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@using System.Data
@model DataTable

<div class="d-flex flex-column flex-root app-root" id="kt_app_root">
    <!--begin::Page-->
    <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
        <!--begin::Wrapper-->
        <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
            <!--begin::Main-->
            <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
                <!--begin::Content wrapper-->
                <div class="d-flex flex-column flex-column-fluid">
                    <!--begin::Toolbar-->
                    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
                        <!--begin::Toolbar container-->
                        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                            <!--begin::Page title-->
                            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                                <!--begin::Title-->
                                <div class="page-heading d-flex text-gray-900 fw-bold flex-column justify-content-center my-0" style="font-size:25px">Jobs</div>
                                <!--end::Title-->
                                <!--begin::Breadcrumb-->
                                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                                    <!--begin::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">Dashboard</li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item">
                                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                    </li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">JobList</li>
                                    <!--end::Item-->
                                </ul>
                                <!--end::Breadcrumb-->
                            </div>
                            <!--end::Page title-->
                        </div>
                        <!--end::Toolbar container-->
                    </div>
                    <!--end::Toolbar-->
                    <!--begin::Content-->
                    <div id="kt_app_content" class="app-content flex-column-fluid">
                        <!--begin::Content container-->
                        <div id="kt_app_content_container" class="app-container container-xxl">
                            <!--begin::Products-->
                            <div class="card card-flush">
                                <!--begin::Card header-->
                                <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                                    <!--begin::Card title-->
                                    <div class="card-title">
                                        <!--begin::Search-->
                                        <div class="d-flex align-items-center position-relative my-1">
                                            <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            <input type="text" data-kt-ecommerce-product-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Search Job" id="sample_1" />
                                        </div>
                                        <!--end::Search-->
                                    </div>
                                    <!--end::Card title-->
                                    <div class="card-toolbar">
                                        <!--begin::Add customer-->
                                        <a asp-area="Job" asp-controller="Job" asp-action="JobAdd" class="btn btn-primary m-2" id="addJobButton">Add Job</a>
                                        <!--end::Add customer-->
                                        <!--begin::Back Button-->
                                        <a asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="SEC_AdminDashboard" class="btn btn-secondary">Back</a>
                                        <!--end::Back Button-->
                                    </div>
                                </div>
                                <!--end::Card header-->
                                <!--begin::Card body-->
                                <div class="card-body pt-0">
                                    <!--begin::Table-->
                                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_ecommerce_products_table">
                                        <thead>
                                            <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                                <th class="w-10px pe-2">
                                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_ecommerce_products_table .form-check-input" value="1" />
                                                    </div>
                                                </th>
                                                <th class="min-w-200px text-gray-800 fs-5 fw-bold">Job</th>
                                                <th class="min-w-100px text-gray-800 fs-5 fw-bold">Description</th>
                                                <th class="min-w-100px text-gray-800 fs-5 fw-bold">Requirements</th>
                                                <th class="min-w-100px text-gray-800 fs-5 fw-bold">Location</th>
                                                <th class="min-w-100px text-gray-800 fs-5 fw-bold">Salary</th>
                                                <th class="min-w-100px text-gray-800 fs-5 fw-bold">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody class="fw-bold text-gray-600" id="sample_2">
                                            @foreach (DataRow dataRow in Model.Rows)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="form-check form-check-sm form-check-custom form-check-solid">
                                                            <input class="form-check-input" type="checkbox" value="1" />
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="ms-5">
                                                                <!--begin::Title-->
                                                                <a asp-area="Job" asp-controller="Job" asp-action="JobAdd" asp-route-Jobid="@Convert.ToInt32(dataRow["JobID"])" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">@dataRow["Title"]</a>
                                                                <!--end::Title-->
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="fw-bold">@dataRow["Description"]</span>
                                                    </td>
                                                    <td>
                                                        <span class="fw-bold">@dataRow["Requirements"]</span>
                                                    </td>
                                                    <td>
                                                        <span class="fw-bold">@dataRow["Location"]</span>
                                                    </td>
                                                    <td>
                                                        <span class="fw-bold">@dataRow["Salary"]</span>
                                                    </td>

                                                    <td class="text-center">
                                                        <form method="post" asp-area="Job" asp-controller="Job" asp-action="JobDelete">
                                                            <div>
                                                                <input type="hidden" value="@Convert.ToInt32(dataRow["JobID"])" name="JobID">
                                                                <button type="submit" class="btn btn-outline-danger btn-xs " >
                                                                    <i class="ki-duotone ki-cross-square fs-2x">
                                                                        <span class="path1"></span>
                                                                        <span class="path2"></span>
                                                                    </i>
                                                                </button>
                                                                <a class="btn btn-outline-success btn-xs" asp-area="Job" asp-controller="Job" asp-action="JobAdd" asp-route-jobid="@Convert.ToInt32(dataRow["JobID"])" data-kt-ecommerce-category-filter="delete_row">
                                                                    <i class="ki-duotone ki-pencil fs-2x">
                                                                        <span class="path1"></span>
                                                                        <span class="path2"></span>
                                                                    </i>
                                                                </a>
                                                            </div>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                    <!--end::Table-->
                                </div>
                                <!--end::Card body-->
                            </div>
                            <!--end::Products-->
                        </div>
                        <!--end::Content container-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Content wrapper-->
            </div>
            <!--end:::Main-->
        </div>
    </div>
</div>
