@{
    ViewData["Title"] = "Job Add";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@model JobFinder.Areas.Job.Models.JobModel

<div class="d-flex flex-column flex-root app-root" id="kt_app_root">
    <!--begin::Page-->
    <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
        <!--begin::Wrapper-->
        <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
            <!--begin::Main-->
            <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
                <!--begin::Content wrapper-->
                <div class="d-flex flex-column flex-column-fluid">
                    <!--begin::Toolbar-->
                    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
                        <!--begin::Toolbar container-->
                        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                            <!--begin::Page title-->
                            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                                <!--begin::Title-->
                                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Job Form</h1>
                                <!--end::Title-->
                                <!--begin::Breadcrumb-->
                                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">Job Finder</li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item">
                                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                    </li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">Catalog</li>
                                    <!--end::Item-->
                                </ul>
                                <!--end::Breadcrumb-->
                            </div>
                            <!--end::Page title-->
                        </div>
                        <!--end::Toolbar container-->
                    </div>
                    <!--end::Toolbar-->
                    <!--begin::Content-->
                    <div id="kt_app_content" class="app-content flex-column-fluid">
                        <!--begin::Content container-->
                        <div id="kt_app_content_container" class="app-container container-xxl">
                
                            <form enctype="multipart/form-data"  method="post" asp-area="Job" asp-controller="Job" asp-action="JobSave">
                                @Html.HiddenFor(x=>x.JobID)

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="card-body">
                                    <div class="form-floating form-floating-outline mb-4">
                                        <input type="text" name="Title" class="form-control" id="ecommerce-product-name" placeholder="Job Name" asp-for="Title" aria-label="Job Name" required>
                                        <label for="ecommerce-product-name">Job Name</label>
                                    </div>

                        
                                    <div class="mb-10 fv-row">
                                        <!--begin::Label-->
                                        <label class="required form-label">Description</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input type="text" asp-for="Description" class="form-control mb-2" placeholder="Description" name="Description" required />
                                        <!--end::Input-->
                                        <!--begin::Description-->
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                        <!--end::Description-->
                                    </div>

                                    <div class="mb-10 fv-row">
                                        <!--begin::Label-->
                                        <label class="required form-label">Requirements</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input type="text" asp-for="Requirements" class="form-control mb-2" placeholder="Requirements" required />
                                        <!--end::Input-->
                                        <!--begin::Description-->
                                        <span asp-validation-for="Requirements" class="text-danger"></span>
                                        <!--end::Description-->
                                    </div>

                                    <div class="mb-10 fv-row">
                                        <!--begin::Label-->
                                        <label class="required form-label">Location</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input type="text" asp-for="Location" class="form-control mb-2" placeholder="Location" required />
                                        <!--end::Input-->
                                        <!--begin::Description-->
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                        <!--end::Description-->
                                    </div>

                                    <div class="mb-10 fv-row">
                                        <!--begin::Label-->
                                        <label class="required form-label">Salary</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input type="text" asp-for="Salary" class="form-control mb-2" placeholder="Salary" required />
                                        <!--end::Input-->
                                        <!--begin::Description-->
                                        <span asp-validation-for="Salary" class="text-danger"></span>
                                        <!--end::Description-->
                                    </div>
                                    <div class="d-flex justify-content-end mb-10">
                                        <!--begin::Button-->
                                        <a asp-area="Job" asp-controller="Job" asp-action="JobList" id="kt_ecommerce_add_product_cancel" class="btn btn-light me-5">Cancel</a>
                                        <!--end::Button-->
                                        <!--begin::Button-->
                                        <button type="submit" id="kt_ecommerce_add_product_submit" class="btn btn-primary">
                                            <span class="indicator-label">Save Changes</span>
                                            <span class="indicator-progress">
                                                Please wait...
                                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                        <!--end::Button-->
                                    </div>
                                </div>
                            </form>
                
                        </div>
                        <!--end::Content container-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Content wrapper-->
            </div>
            <!--end:::Main-->
        </div>
    </div>
</div>